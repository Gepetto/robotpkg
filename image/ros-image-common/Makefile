ROS_PKG=		image_common
ROS_METAPKG=		yes
ROS_VERSION=		1.12.0
ROS_REPO=		ros-perception

# for some reason, the tar.gz generated by git hub has "invalid headers"
EXTRACT_SUFX=		.zip

CATEGORIES=		image
ROS_COMMENT=		common code for working with images

include ../../meta-pkgs/ros-base/Makefile.common

SUBST_CLASSES+=		py-interp
SUBST_FILES.py-interp+=	opencv_tests/nodes/*.py

USE_BOOST_LIBS+=filesystem python

Boost_PYTHON_LIBRARY=	$(filter %.so,${SYSTEM_FILES.boost-lib-python})
CMAKE_ARGS+=		-DBoost_PYTHON_LIBRARY_RELEASE=${Boost_PYTHON_LIBRARY}
CMAKE_ARGS+=		-DBoost_PYTHON_LIBRARY_DEBUG=${Boost_PYTHON_LIBRARY}

include ../../devel/ros-catkin/depend.mk
include ../../devel/ros-pluginlib/depend.mk
include ../../devel/ros-ros/depend.mk
include ../../devel/tinyxml/depend.mk
include ../../interfaces/ros-common-msgs/depend.mk
include ../../interfaces/ros-std-msgs/depend.mk
include ../../lang/ros-message-generation/depend.mk
include ../../middleware/ros-comm/depend.mk
include ../../mk/sysdep/boost-headers.mk
include ../../mk/sysdep/boost-libs.mk
include ../../mk/sysdep/yaml-cpp.mk
include ../../mk/robotpkg.mk
