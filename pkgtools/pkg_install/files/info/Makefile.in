srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
sbindir=	@sbindir@
mandir=		@mandir@

man1dir=	$(mandir)/man1
cat1dir=	$(mandir)/cat1

transform =	@program_transform_name@

CC=		@CC@
CCLD=		$(CC)
LIBS=		-linstall @LIBS@
CPPFLAGS=	@CPPFLAGS@ -I. -I$(srcdir) -I../lib
DEFS=		@DEFS@
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@ -L../lib

INSTALL=	@INSTALL@

PROG=		pkg_info
DSTPROG=	`echo $(PROG)| sed '$(transform)'`

OBJS=	main.o perform.o show.o

all: $(PROG)

.c.o:
	$(CC) $(DEFS) $(CPPFLAGS) $(CFLAGS) -c $<

$(PROG): $(OBJS)
	$(CCLD) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

clean:
	rm -f $(OBJS) $(PROG)

install:
	$(INSTALL) -m 755 -d $(sbindir)
	$(INSTALL) -m 755 -d $(man1dir)
	$(INSTALL) -m 755 -d $(cat1dir)
	$(INSTALL) $(PROG) $(sbindir)/$(DSTPROG)
	$(INSTALL) -m 444 $(PROG).1 $(man1dir)/$(DSTPROG).1
	$(INSTALL) -m 444 $(PROG).cat1 $(cat1dir)/$(DSTPROG).0
