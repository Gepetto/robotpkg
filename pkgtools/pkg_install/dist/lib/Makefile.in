srcdir=		@srcdir@

pkgdbdir=	@pkgdbdir@
mandir=		@mandir@
datarootdir=	@datarootdir@

cat5dir=	$(mandir)/cat5
cat7dir=	$(mandir)/cat7
man5dir=	$(mandir)/man5
man7dir=	$(mandir)/man7

tar=		@tar@
ftp=		@ftp@

BOOTSTRAP=	@bootstrap@

RANLIB=		@RANLIB@
AR=		@AR@
CC=		@CC@
CPPFLAGS=	@CPPFLAGS@ -I. -I$(srcdir)
DEFS=		@DEFS@ -DDEF_LOG_DIR=\"$(pkgdbdir)\" -DTAR_CMD=\"$(tar)\" -DFTP_CMD=\"$(ftp)\"
CFLAGS=		@CFLAGS@

INSTALL=	@INSTALL@

LIB=	libinstall.a

OBJS=	automatic.o conflicts.o decompress.o dewey.o fexec.o file.o \
	ftpio.o global.o iterate.o lpkg.o opattern.o \
	path.o pen.o pexec.o pkgdb.o plist.o \
	str.o var.o version.o vulnerabilities-file.o

ifneq (,$(BOOTSTRAP))
CPPFLAGS+=	-DBOOTSTRAP
else
OBJS+=	pkg_io.o
endif

all: $(LIB)

.c.o:
	$(CC) $(DEFS) $(CPPFLAGS) $(CFLAGS) -c $<

$(LIB): $(OBJS)
	$(AR) crv $@ $(OBJS)
	$(RANLIB) $@

clean:
	rm -f $(OBJS) $(LIB)

install:
	$(INSTALL) -m 755 -d ${DESTDIR}$(man5dir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(cat5dir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(man7dir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(cat7dir)
	$(INSTALL) -m 444 robotpkg_summary.5 ${DESTDIR}$(man5dir)/robotpkg_summary.5
	$(INSTALL) -m 444 robotpkg_summary.cat5 ${DESTDIR}$(cat5dir)/robotpkg_summary.0
	$(INSTALL) -m 444 robotpkg.7 ${DESTDIR}$(man7dir)/robotpkg.7
	$(INSTALL) -m 444 robotpkg.cat7 ${DESTDIR}$(cat7dir)/robotpkg.0
