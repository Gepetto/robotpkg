srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
sbindir=	@sbindir@
mandir=		@mandir@
datarootdir=	@datarootdir@

man1dir=	$(mandir)/man1
cat1dir=	$(mandir)/cat1

BOOTSTRAP=	@bootstrap@
SSL_SUPPORT=	@ssl_support@

CC=		@CC@
CCLD=		$(CC)
CPPFLAGS=	@CPPFLAGS@ -I. -I$(srcdir) -I../lib
DEFS=		@DEFS@
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@ -L../lib

ifeq (,$(BOOTSTRAP))
LIBS=		-linstall -lnetpgpverify -larchive -lbz2 -lz -lfetch @LIBS@
  ifneq (,$(SSL_SUPPORT))
LIBS+=		-lssl -lcrypto
  endif
else
LIBS=		-linstall @LIBS@
CPPFLAGS+=	-DBOOTSTRAP
endif

INSTALL=	@INSTALL@

PROG=		robotpkg_info

OBJS=	main.o perform.o show.o

all: $(PROG)

.c.o:
	$(CC) $(DEFS) $(CPPFLAGS) $(CFLAGS) -c $<

$(PROG): $(OBJS)
	$(CCLD) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

clean:
	rm -f $(OBJS) $(PROG)

install:
	$(INSTALL) -m 755 -d ${DESTDIR}$(sbindir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(man1dir)
	$(INSTALL) $(PROG) ${DESTDIR}$(sbindir)/$(PROG)
	$(INSTALL) -m 444 pkg_info.1 ${DESTDIR}$(man1dir)/$(PROG).1
