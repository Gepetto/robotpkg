+LIB	= blas
+VPATH	= BLAS
+
+all:	lib$(LIB).la
+
+OBJS =	caxpy.lo ccopy.lo cdotc.lo cdotu.lo cgbmv.lo cgemm.lo cgemv.lo cgerc.lo	\
+	cgeru.lo chbmv.lo chemm.lo chemv.lo cher.lo cher2.lo cher2k.lo cherk.lo	\
+	chpmv.lo chpr.lo chpr2.lo crotg.lo cscal.lo csrot.lo csscal.lo cswap.lo	\
+	csymm.lo csyr2k.lo csyrk.lo ctbmv.lo ctbsv.lo ctpmv.lo ctpsv.lo		\
+	ctrmm.lo ctrmv.lo ctrsm.lo ctrsv.lo dasum.lo daxpy.lo dcabs1.lo		\
+	dcopy.lo ddot.lo dgbmv.lo dgemm.lo dgemv.lo dger.lo dnrm2.lo drot.lo	\
+	drotg.lo drotm.lo drotmg.lo dsbmv.lo dscal.lo dsdot.lo dspmv.lo dspr.lo	\
+	dspr2.lo dswap.lo dsymm.lo dsymv.lo dsyr.lo dsyr2.lo dsyr2k.lo dsyrk.lo	\
+	dtbmv.lo dtbsv.lo dtpmv.lo dtpsv.lo dtrmm.lo dtrmv.lo dtrsm.lo dtrsv.lo	\
+	dzasum.lo dznrm2.lo icamax.lo idamax.lo isamax.lo izamax.lo lsame.lo	\
+	sasum.lo saxpy.lo scabs1.lo scasum.lo scnrm2.lo scopy.lo sdot.lo sdsdot.lo\
+	sgbmv.lo sgemm.lo sgemv.lo sger.lo snrm2.lo srot.lo srotg.lo srotm.lo	\
+	srotmg.lo ssbmv.lo sscal.lo sspmv.lo sspr.lo sspr2.lo sswap.lo ssymm.lo	\
+	ssymv.lo ssyr.lo ssyr2.lo ssyr2k.lo ssyrk.lo stbmv.lo stbsv.lo stpmv.lo	\
+	stpsv.lo strmm.lo strmv.lo strsm.lo strsv.lo xerbla.lo zaxpy.lo		\
+	zcopy.lo zdotc.lo zdotu.lo zdrot.lo zdscal.lo zgbmv.lo zgemm.lo		\
+	zgemv.lo zgerc.lo zgeru.lo zhbmv.lo zhemm.lo zhemv.lo zher.lo zher2.lo	\
+	zher2k.lo zherk.lo zhpmv.lo zhpr.lo zhpr2.lo zrotg.lo zscal.lo zswap.lo	\
+	zsymm.lo zsyr2k.lo zsyrk.lo ztbmv.lo ztbsv.lo ztpmv.lo ztpsv.lo		\
+	ztrmm.lo ztrmv.lo ztrsm.lo ztrsv.lo
+
+%.lo: %.f
+	${LIBTOOL} --tag=CC --mode=compile				\
+		${FC} ${FFLAGS} ${CPPFLAGS} -c $< -o $@
+
+lib$(LIB).la: $(OBJS)
+	${LIBTOOL} --tag=CC --mode=link ${FC} ${FFLAGS}			\
+		-o $@ ${OBJS} ${LDFLAGS} -rpath ${PREFIX}/lib		\
+		-version-info 1:0
+
+install: lib$(LIB).la
+	${LIBTOOL} --mode=install ${BSD_INSTALL_LIB} $^			\
+		${PREFIX}/lib
